/**
 * @param {string} s
 * @return {number}
 */
var longestValidParentheses = function (s) {
    let streak = 0, mcount = 0, count = 0;
    let ar = [];
    let dp = new Array(s.length).fill(0);

    for (let i = 0; i < s.length; i++) {
        if (s[i] == '(') {
            ar.push(i);
        }
        else {
            if (ar.length > 0) {
                dp[ar[ar.length - 1]] += 2;
                dp[i] = -1;
                ar.pop();
            }
        }
    }
    for (let i = 0; i < dp.length; i++) {
        if (dp[i] == 2) {
            count += 2;
            mcount = Math.max(mcount, count);
        }
        else if (dp[i] == 0) {
            count = 0;

        }
    }
    mcount = Math.max(mcount, count);

    return mcount;
};
