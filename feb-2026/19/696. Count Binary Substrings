/**
 * @param {string} s
 * @return {number}
 */
var countBinarySubstrings = function (s) {
    let flag = '', zcount = 0, ocount = 0, count = 0;
    for (let i = 0; i < s.length; i++) {
        if (i == 0) {
            if (s[i] == '0') {
                flag = '0';
                zcount += 1;
            }
            else {
                flag = '1';
                ocount += 1;
            }
            // console.log(s[i],flag);
        }
        else {
            // console.log(s[i]==flag,s[i],flag);
            if (s[i] == flag) {
                if (flag == '0') {
                    zcount += 1;
                }
                else {
                    ocount += 1;
                }
            }
            else {
                if (flag == '0' && s[i] == '1') {
                    if (ocount == 0) {
                        ocount = 1;
                        flag = '1';

                    }
                    else {
                        count += Math.min(ocount, zcount);
                        ocount = 1;
                        flag = '1';
                    }
                }
                else {
                    if (zcount == 0) {
                        zcount = 1;
                        flag = '0';

                    }
                    else {
                        count += Math.min(ocount, zcount);
                        zcount = 1;
                        flag = '0';
                    }
                }

            }
        }

        console.log(i, zcount, ocount);
    }
    count += Math.min(ocount, zcount);
    return count;
};
